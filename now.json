{
  "version": 2,

  "builds": [
    { "src": "index.js", "use": "@now/node-server" },

    {
      "src": "/public/*",
      "use": "@now/static"
    }
  ],

  "routes": [
    {
      "src": "/",
      "dest": "/public/general.html"
    },
    {
      "src": "/api/(.*)",
      "dest": "/index.js"
    },
    {
      "src": "/style.css",
      "dest": "/public/style.css"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1.html"
    }
  ]
}
